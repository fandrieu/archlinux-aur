pkgname='mkinitcpio-rootoverlay'
pkgver=1.0
pkgrel=1
pkgdesc='hook to setup an overlay root file system'
url='https://github.com/fandrieu/archlinux-aur/'
arch=('any')
license=('BSD')
install="${pkgname}.install"
depends=('mkinitcpio>=0.9.0')
source=('rootoverlay_hook' 'rootoverlay_install')

build() {
    install -o root -g root -D ${srcdir}/rootoverlay_install ${pkgdir}/usr/lib/initcpio/install/rootoverlay
    install -o root -g root -D ${srcdir}/rootoverlay_hook ${pkgdir}/usr/lib/initcpio/hooks/rootoverlay
}

md5sums=('9475d043e09127af9f25892dbd33f3f3'
         '2bb3dd00df1e05afb3216c0f662eea3d')
